<?xml version = "1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="base_format_tree_view">
            <field name="name">base.format.tree</field>
            <field name="model">base.format</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="BaseFormatTree">
                    <field name='name'>Name</field>
                    <field name='format_uom'/>
                    <field name='width'/>
                    <field name='height'/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="base_format_form_view">
            <field name="name">base.format.form</field>
            <field name="model">base.format</field>
            <field name="arch" type="xml">
                <form string="BaseFormatForm">
                    <sheet>
                        <group>
                            <h1>
                                <field name='name' default_focus="1" placeholder="Name"/>
                            </h1>
                        </group>
                        <group>
                            <field name='format_uom'/>
                        </group>
                        <group col="2">
                            <group>
                                <field name='width' />
                            </group>
                            <group>
                                <field name='height' />
                            </group>
                        </group>
                        <group>
                            <field name='comment'/>
                            <field name='active'/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_base_form_tree_view">
            <field name="name">Formats</field>
            <field name="view_id" ref="base_format_tree_view"/>
            <field name="res_model">base.format</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_base_tree_view" model="ir.actions.act_window">
            <field name="name">Formats</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">base.format</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create here a new format.</p>
            </field>
        </record>
        <menuitem
                action="action_base_tree_view"
                id="menu_action_base_tree_view"
                parent="base.menu_base_config"
                sequence="80"
                groups="base.group_no_one"
                />
    </data>
</openerp>